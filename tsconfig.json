{
    "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2016", "dom"],
    "types": [
        "node"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}